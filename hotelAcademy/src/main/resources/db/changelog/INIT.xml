<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="Kassia">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela ROOM">
            <not>
                <tableExists tableName="ROOM"/>
            </not>
        </preConditions>

        <createTable tableName="ROOM">

            <column name="ROOM_NUMBER" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ROOM"/>
            </column>

            <column name="SLEEP" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="ROOM_TYPE" type="VARCHAR(255)"> 
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="2" author="Luiz">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela GUEST">
            <not>
                <tableExists tableName="GUEST"/>
            </not>
        </preConditions>

        <createTable tableName="GUEST">

            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_GUEST"/>
            </column>

            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="CPF" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="BIRTHDAY" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="CITY" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="STATE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="ZIPCODE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="STREET" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addAutoIncrement tableName="GUEST"
                          columnName="ID"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"
        />
    </changeSet>

    <changeSet id="3" author="André">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela RESERVAS">
            <not>
                <tableExists tableName="RESERVATION"/>
            </not>
        </preConditions>

        <createTable tableName="RESERVATION">

            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESERVATION"/>
            </column>

            <column name="INITIAL_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="FINAL_DATE" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="ROOM_NUMBER" type="INT">
                <constraints nullable="false"
                             foreignKeyName="fk_roomNumber_reservation"
                             referencedTableName="ROOM"
                             referencedColumnNames="ROOM_NUMBER"/>
            </column>

            <column name="MAIN_GUEST_ID" type="INT">
                <constraints nullable="false"
                             foreignKeyName="fk_responsibility_reservation"
                             referencedTableName="GUEST"
                             referencedColumnNames="ID"/>
            </column>

            <column name="RESERVATION_STATUS" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="RESERVATION_VALUE" type="FLOAT">
                <constraints nullable="false"/>
           </column>


        </createTable>

        <addAutoIncrement tableName="RESERVATION"
                          columnName="ID"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"
        />
    </changeSet>
</databaseChangeLog>