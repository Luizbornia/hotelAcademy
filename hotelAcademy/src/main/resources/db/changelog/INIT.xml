<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1" author="Kassia">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela ROOM">
            <not>
                <tableExists tableName="ROOM"/>
            </not>
        </preConditions>

        <createTable tableName="ROOM">

            <column name="ROOM_NUMBER" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ROOM"/>
            </column>

            <column name="SLEEP" type="VARCHAR(255)"> <!--${description}-->
                <constraints nullable="false"/>
            </column>

            <column name="ROOM_TYPE" type="VARCHAR(255)"> <!--${description}-->
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet id="2" author="André">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela RESERVAS">
            <not>
                <tableExists tableName="RESERVATION"/>
            </not>
        </preConditions>

        <createTable tableName="RESERVATION">

            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESERVATION"/>
            </column>

            <column name="initial_date" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="final_date" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="ROOM_NUMBER" type="INT">
                <constraints foreignKeyName="fk_roomNumber_reservation"
                             referencedTableName="ROOM"
                             referencedColumnNames="ROOM_NUMBER"/>
            </column>

            <!--

            <column name="MAIN_GUEST" type="INT">
                <constraints foreignKeyName="fk_MainGuest_reservation"
                             referencedTableName="MainGuest"
                             referencedColumnNames="MAIN_GUEST"/>
            </column>

            -->

        </createTable>

        <addAutoIncrement tableName="RESERVATION"
                          columnName="id"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"
        />
    </changeSet>

    <changeSet id="3" author="Luiz">
        <preConditions onFail="MARK_RAN" onFailMessage="Já existe a tabela HOSPEDE">
            <not>
                <tableExists tableName="HOSPEDE"/>
            </not>
        </preConditions>

        <createTable tableName="HOSPEDE">
            <column name="COD_GUEST" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CODGUEST"/>
            </column>
            <column name="RESPONSIBILITY" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="COD_RESPONSIBLE" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CPF" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="BIRTHDAY" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CITY" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="STATE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CEP" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="STREET" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="NUMBER" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addAutoIncrement tableName="HOSPEDE"
                          columnName="COD_GUEST"
                          columnDataType="int"
                          incrementBy="1"
                          startWith="1"
        />
    </changeSet>

</databaseChangeLog>